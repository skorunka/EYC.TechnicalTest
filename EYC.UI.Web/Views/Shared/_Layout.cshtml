@using System.Globalization
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>EYC Calculations</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="container body-content">
		<div class="jumbotron">
			<h1>Retailer charge calculation</h1>
			<p class="lead">
				Amount to be charged against a supplier by a retailer. All the charges are applied on the total price of a product (units * unit price).
			</p>
			<p>
				<a href="https://github.com/skorunka/EYC.TechnicalTest/tree/develop" class="btn btn-primary btn-lg">See on GitHub</a>
			</p>
		</div>

		@RenderBody()

		<hr />
		<footer>
			<p>&copy; EYC @DateTime.Now.Year</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/site")
	@RenderSection("scripts", required: false)
</body>
</html>
